<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayerControlView">
        <attr name="pcv_show_timeout_ms" format="integer" />
        <attr name="pcv_fast_rewind_ms" format="integer" />
        <attr name="pcv_fast_forward_ms" format="integer" />
        <attr name="pcv_always_show" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BatteryView">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color|reference"/>
        <attr name="number_text_size" format="dimension"/>
        <attr name="progress_color" format="color|reference"/>
        <attr name="show_type">
            <enum name="fill" value="0"/>
            <enum name="number" value="1"/>
        </attr>
        <attr name="head_orientation">
            <flag name="left" value="0"/>
            <flag name="right" value="2"/>
        </attr>
    </declare-styleable>
</resources>